# UFW Application Profile for NovaCron Distributed VM Management System
# Comprehensive profile covering all NovaCron services and security requirements
# Version: 1.0 - Production ready with security hardening

[NovaCron API]
title=NovaCron API Server
description=REST API endpoints for VM management and system orchestration
ports=8090/tcp

[NovaCron WebSocket]
title=NovaCron WebSocket API
description=Real-time WebSocket communication for live updates
ports=8091/tcp

[NovaCron Frontend]
title=NovaCron Web Frontend
description=Web interface for VM management and monitoring
ports=8092/tcp

[NovaCron AI Engine]
title=NovaCron AI Engine
description=AI/ML engine for intelligent VM optimization and predictive analytics
ports=8093/tcp

[NovaCron Hypervisor]
title=NovaCron VM Hypervisor
description=Hypervisor service for VM management and orchestration
ports=9000/tcp

[NovaCron Database]
title=NovaCron PostgreSQL Database
description=Database access for API server (external port)
ports=11432/tcp

[NovaCron Prometheus]
title=NovaCron Prometheus Metrics
description=Prometheus metrics collection and time-series database
ports=9090/tcp

[NovaCron Grafana]
title=NovaCron Grafana Dashboard
description=Monitoring dashboards and data visualization
ports=3001/tcp

[NovaCron Redis]
title=NovaCron Redis Cache
description=Redis caching system and AI engine backend
ports=6379/tcp

[NovaCron Node Exporter]
title=NovaCron Node Exporter
description=System metrics collection for monitoring stack
ports=9100/tcp

[NovaCron Alert Manager]
title=NovaCron Alert Manager
description=Alert routing and notification management
ports=9093/tcp

[NovaCron SSH]
title=NovaCron SSH Management
description=SSH access for system administration
ports=22/tcp

[NovaCron VNC]
title=NovaCron VM VNC Console
description=VNC console access for VM management
ports=5900:5999/tcp

[NovaCron Migration]
title=NovaCron VM Migration
description=Live migration data transfer and synchronization
ports=49152:49215/tcp

[NovaCron Cluster]
title=NovaCron Cluster Communication
description=Inter-node cluster communication and coordination
ports=7946/tcp|7946/udp

[NovaCron HTTPS]
title=NovaCron HTTPS Web
description=Secure HTTPS access for web services
ports=443/tcp

[NovaCron HTTP]
title=NovaCron HTTP Web
description=HTTP access for web services (redirect to HTTPS)
ports=80/tcp

[NovaCron DNS]
title=NovaCron DNS Service

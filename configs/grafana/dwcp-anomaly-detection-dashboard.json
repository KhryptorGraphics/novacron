{
  "dashboard": {
    "title": "DWCP Anomaly Detection",
    "tags": ["dwcp", "anomaly", "ml"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Real-time Anomaly Timeline",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "rate(dwcp_anomalies_detected_total[5m])",
            "legendFormat": "{{metric_name}} - {{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            },
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*critical.*"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}
              ]
            },
            {
              "matcher": {"id": "byRegexp", "options": ".*warning.*"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "orange", "mode": "fixed"}}
              ]
            }
          ]
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "values": ["value", "max", "min"]
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 2,
        "title": "Anomaly Count by Metric",
        "type": "bargauge",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (metric_name) (dwcp_anomalies_detected_total)",
            "legendFormat": "{{metric_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "orange"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 3,
        "title": "Severity Distribution",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (severity) (dwcp_anomalies_detected_total)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "pie",
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 4,
        "title": "Confidence Scores Heatmap",
        "type": "heatmap",
        "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "dwcp_anomaly_confidence",
            "legendFormat": "{{metric_name}} - {{model_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": true,
          "cellGap": 2,
          "cellRadius": 0,
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "scheme",
            "reverse": false,
            "scheme": "RdYlGn",
            "steps": 64
          },
          "exemplars": {
            "color": "rgba(255,0,255,0.7)"
          },
          "filterValues": {
            "le": 1e-9
          },
          "legend": {
            "show": true
          },
          "rowsFrame": {
            "layout": "auto"
          },
          "tooltip": {
            "show": true,
            "yHistogram": false
          },
          "yAxis": {
            "axisPlacement": "left",
            "reverse": false
          }
        }
      },
      {
        "id": 5,
        "title": "Model Detection Comparison",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (model_type) (rate(dwcp_anomalies_detected_total[5m]))",
            "legendFormat": "{{model_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 100,
              "stacking": {
                "mode": "normal"
              }
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 6,
        "title": "Detection Latency",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(dwcp_anomaly_detection_latency_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(dwcp_anomaly_detection_latency_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.50, rate(dwcp_anomaly_detection_latency_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Metrics Processed",
        "type": "stat",
        "gridPos": {"x": 0, "y": 32, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rate(dwcp_metrics_processed_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 8,
        "title": "Anomalies Detected (Last Hour)",
        "type": "stat",
        "gridPos": {"x": 6, "y": 32, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "increase(dwcp_anomalies_detected_total[1h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 9,
        "title": "Critical Anomalies",
        "type": "stat",
        "gridPos": {"x": 12, "y": 32, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(dwcp_anomalies_detected_total{severity=\"critical\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 10,
        "title": "Average Detection Latency",
        "type": "stat",
        "gridPos": {"x": 18, "y": 32, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rate(dwcp_anomaly_detection_latency_seconds_sum[5m]) / rate(dwcp_anomaly_detection_latency_seconds_count[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 11,
        "title": "Metric-Specific Anomaly Trends",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 36, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "rate(dwcp_anomalies_detected_total{metric_name=\"bandwidth\"}[5m])",
            "legendFormat": "Bandwidth",
            "refId": "A"
          },
          {
            "expr": "rate(dwcp_anomalies_detected_total{metric_name=\"latency\"}[5m])",
            "legendFormat": "Latency",
            "refId": "B"
          },
          {
            "expr": "rate(dwcp_anomalies_detected_total{metric_name=\"packet_loss\"}[5m])",
            "legendFormat": "Packet Loss",
            "refId": "C"
          },
          {
            "expr": "rate(dwcp_anomalies_detected_total{metric_name=\"jitter\"}[5m])",
            "legendFormat": "Jitter",
            "refId": "D"
          },
          {
            "expr": "rate(dwcp_anomalies_detected_total{metric_name=\"cpu_usage\"}[5m])",
            "legendFormat": "CPU Usage",
            "refId": "E"
          },
          {
            "expr": "rate(dwcp_anomalies_detected_total{metric_name=\"memory_usage\"}[5m])",
            "legendFormat": "Memory Usage",
            "refId": "F"
          },
          {
            "expr": "rate(dwcp_anomalies_detected_total{metric_name=\"error_rate\"}[5m])",
            "legendFormat": "Error Rate",
            "refId": "G"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "max"]
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "cluster",
          "type": "query",
          "query": "label_values(dwcp_anomalies_detected_total, cluster)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        },
        {
          "name": "severity",
          "type": "query",
          "query": "label_values(dwcp_anomalies_detected_total, severity)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Critical Anomalies",
          "datasource": "Prometheus",
          "expr": "ALERTS{alertname=~\".*Anomaly.*\", severity=\"critical\"}",
          "iconColor": "red",
          "enable": true
        }
      ]
    }
  }
}

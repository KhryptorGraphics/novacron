[Unit]
Description=NovaCron Hypervisor Service
After=network.target

[Service]
User=novacron
Group=novacron
WorkingDirectory=/opt/novacron
ExecStart=/usr/bin/python3.12 /opt/novacron/backend/services/hypervisor/main.py --config /etc/novacron/hypervisor.yaml
Restart=on-failure
RestartSec=5
Environment=PYTHONPATH=/opt/novacron
Environment=PYTHON_VERSION=3.12

[Install]
WantedBy=multi-user.target

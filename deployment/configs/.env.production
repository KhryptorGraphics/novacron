# NovaCron Production Environment Configuration

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=warn

# Domain and URLs
DOMAIN_NAME=novacron.local
API_BASE_URL=https://novacron.local/api
WS_BASE_URL=wss://novacron.local/ws

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=novacron_prod
POSTGRES_PASSWORD=Pr0d_DB_Ultra_Secure_P@ssw0rd_2024_v2!
POSTGRES_DB=novacron_production
POSTGRES_SSLMODE=require

# Redis Configuration
REDIS_HOST=redis-master
REDIS_PORT=6379
REDIS_PASSWORD=Pr0d_Red1s_Mega_Secure_P@ss_2024!
REDIS_DB=0

# Authentication
JWT_SECRET=production_jwt_secret_key_ultra_secure_and_very_long_for_maximum_security_2024_version_2
JWT_EXPIRY=12h
SESSION_TIMEOUT=15m

# API Configuration
API_PORT=8090
WS_PORT=8091
CORS_ALLOWED_ORIGINS=https://novacron.local,https://admin.novacron.local
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=Pr0d_Grafana_Admin_Mega_Secure_2024!
PROMETHEUS_RETENTION=30d

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 1 * * *"
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=novacron-production-backups
BACKUP_S3_REGION=us-east-1

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/production.crt
SSL_KEY_PATH=/etc/ssl/private/production.key

# Resource Limits (Production)
API_REPLICAS=5
FRONTEND_REPLICAS=3
DB_MAX_CONNECTIONS=200
REDIS_MAXMEMORY=4gb

# Feature Flags
METRICS_ENABLED=true
TRACING_ENABLED=true
CACHE_ENABLED=true

# Security
CSRF_ENABLED=true
SECURE_COOKIES=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# External Services
SMTP_HOST=smtp.production.example.com
SMTP_PORT=587
SMTP_USER=novacron-prod
SMTP_PASSWORD=smtp_prod_password_here

# Container Registry
REGISTRY=ghcr.io
IMAGE_PREFIX=novacron
TAG=latest

# High Availability
CLUSTER_MODE=enabled
MASTER_NODES=3
REPLICA_NODES=2

# Performance Tuning
CONNECTION_POOL_SIZE=50
QUERY_TIMEOUT=30s
IDLE_TIMEOUT=300s
MAX_REQUEST_SIZE=10MB

# Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key_here
ALERT_EMAIL=alerts@novacron.local
# NovaCron Staging Environment Configuration

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=info

# Domain and URLs
DOMAIN_NAME=staging.novacron.local
API_BASE_URL=https://staging.novacron.local/api
WS_BASE_URL=wss://staging.novacron.local/ws

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=novacron_staging
POSTGRES_PASSWORD=StAg1ng_DB_P@ssw0rd_2024!
POSTGRES_DB=novacron_staging
POSTGRES_SSLMODE=require

# Redis Configuration
REDIS_HOST=redis-master
REDIS_PORT=6379
REDIS_PASSWORD=Stag1ng_Red1s_P@ss!
REDIS_DB=0

# Authentication
JWT_SECRET=staging_jwt_secret_key_very_secure_and_long_enough_for_production_use_2024
JWT_EXPIRY=24h
SESSION_TIMEOUT=30m

# API Configuration
API_PORT=8090
WS_PORT=8091
CORS_ALLOWED_ORIGINS=https://staging.novacron.local,https://staging-admin.novacron.local
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW=60s

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=Stag1ng_Grafana_Adm1n!
PROMETHEUS_RETENTION=7d

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=novacron-staging-backups
BACKUP_S3_REGION=us-east-1

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key

# Resource Limits (Staging)
API_REPLICAS=2
FRONTEND_REPLICAS=1
DB_MAX_CONNECTIONS=50
REDIS_MAXMEMORY=1gb

# Feature Flags
METRICS_ENABLED=true
TRACING_ENABLED=true
CACHE_ENABLED=true

# Security
CSRF_ENABLED=true
SECURE_COOKIES=true
HSTS_ENABLED=true

# External Services
SMTP_HOST=smtp.staging.example.com
SMTP_PORT=587
SMTP_USER=novacron-staging
SMTP_PASSWORD=smtp_password_here

# Container Registry
REGISTRY=ghcr.io
IMAGE_PREFIX=novacron
TAG=staging-latest
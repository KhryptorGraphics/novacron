{
	"name": "novacron",
	"version": "1.0.0",
	"description": "NovaCron - Advanced VM Management and ML Engineering Platform",
	"main": "index.js",
	"scripts": {
		"test": "jest",
		"test:unit": "jest tests/unit",
		"test:integration": "node tests/integration/runners/test-runner.js",
		"test:integration:system": "node tests/integration/runners/test-runner.js --categories system",
		"test:integration:mle-star": "node tests/integration/runners/test-runner.js --categories mle-star",
		"test:integration:performance": "node tests/integration/runners/test-runner.js --categories performance",
		"test:integration:coverage": "NOVACRON_TEST_COVERAGE=true npm run test:integration",
		"test:integration:parallel": "NOVACRON_TEST_PARALLEL=true npm run test:integration",
		"test:integration:debug": "NOVACRON_TEST_DEBUG=true npm run test:integration",
		"test:integration:docker": "NOVACRON_USE_DOCKER=true npm run test:integration",
		"test:all": "npm run test:unit && npm run test:integration",
		"test:ci": "npm run test:unit && npm run test:integration:coverage",
		"start": "node server.js",
		"start:api": "node backend/cmd/api-server/main.js",
		"start:frontend": "npm run dev --prefix frontend",
		"dev": "concurrently \"npm run start:api\" \"npm run start:frontend\"",
		"build": "npm run build:frontend && npm run build:backend",
		"build:frontend": "npm run build --prefix frontend",
		"build:backend": "go build -o bin/ ./backend/...",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@genkit-ai/mcp": "^1.19.2",
		"@radix-ui/react-icons": "^1.3.2",
		"axios": "^1.6.0",
		"bun": "^1.2.5",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.482.0",
		"pg": "^8.11.0",
		"redis": "^4.6.0",
		"tailwind-merge": "^3.0.2",
		"tailwindcss": "^4.0.14",
		"tailwindcss-animate": "^1.0.7",
		"ws": "^8.14.0"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/jest": "^29.5.0",
		"@types/node": "^20.0.0",
		"@types/pg": "^8.10.0",
		"@types/ws": "^8.5.0",
		"concurrently": "^8.2.0",
		"eslint": "^8.57.0",
		"jest": "^29.7.0",
		"puppeteer": "^21.0.0",
		"typescript": "^5.0.0"
	},
	"jest": {
		"testEnvironment": "node",
		"collectCoverageFrom": [
			"**/*.{js,jsx,ts,tsx}",
			"!**/node_modules/**",
			"!**/coverage/**",
			"!**/tests/**",
			"!**/*.test.{js,jsx,ts,tsx}",
			"!**/*.config.{js,jsx,ts,tsx}"
		],
		"coverageReporters": [
			"text",
			"lcov",
			"html"
		],
		"testMatch": [
			"**/tests/**/*.test.{js,jsx,ts,tsx}",
			"**/?(*.)+(spec|test).{js,jsx,ts,tsx}"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/coverage/"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/tests/setup.js"
		]
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/novacron/novacron.git"
	},
	"keywords": [
		"vm-management",
		"ml-engineering",
		"distributed-systems",
		"cloud-computing",
		"automation"
	],
	"author": "NovaCron Team",
	"license": "MIT"
}

{
  "dashboard": {
    "id": null,
    "title": "NovaCron Unified System Monitoring",
    "description": "Comprehensive monitoring dashboard for all NovaCron systems",
    "tags": ["novacron", "monitoring", "unified"],
    "style": "dark",
    "timezone": "",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "node",
          "type": "query",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "environment",
          "type": "query", 
          "query": "label_values(up, environment)",
          "refresh": 1,
          "includeAll": false,
          "multi": false
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(up[5m]) > 0"
        }
      ]
    },
    "refresh": "10s",
    "schemaVersion": 36,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"novacron\"}",
            "legendFormat": "System Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "mappings": [
              {"options": {"0": {"text": "Down", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "Up", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "Response Time SLA (Target: <1s)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"novacron\"}[5m]))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"novacron\"}[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"novacron\"}[5m]))",
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.8},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        }
      },
      {
        "id": 3,
        "title": "Request Rate (Target: >1000 RPS)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"novacron\"}[5m]))",
            "legendFormat": "Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 500},
                {"color": "green", "value": 1000}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Error Rate SLA (Target: <0.1%)",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"novacron\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"novacron\"}[5m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.05},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 5,
        "title": "Uptime SLA (Target: >99.9%)",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "avg(up{job=\"novacron\"}) * 100",
            "legendFormat": "Uptime %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 99.5},
                {"color": "green", "value": 99.9}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "sum(active_connections{job=\"novacron\"})",
            "legendFormat": "Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "title": "VM Migration System",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 22},
        "collapsed": false
      },
      {
        "id": 8,
        "title": "VM Migration Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 23},
        "targets": [
          {
            "expr": "sum(rate(vm_migrations_total{job=\"novacron\"}[5m]))",
            "legendFormat": "Migrations/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 9,
        "title": "Migration Success Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 23},
        "targets": [
          {
            "expr": "sum(rate(vm_migrations_total{job=\"novacron\",status=\"success\"}[5m])) / sum(rate(vm_migrations_total{job=\"novacron\"}[5m])) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 10,
        "title": "Average Migration Time",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 23},
        "targets": [
          {
            "expr": "avg(vm_migration_duration_seconds{job=\"novacron\"})",
            "legendFormat": "Avg Duration"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        }
      },
      {
        "id": 11,
        "title": "ML/Orchestration System",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 31},
        "collapsed": false
      },
      {
        "id": 12,
        "title": "ML Model Accuracy",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "ml_model_accuracy{job=\"novacron\",model_type=\"placement_predictor\"}",
            "legendFormat": "Placement Predictor"
          },
          {
            "expr": "ml_model_accuracy{job=\"novacron\",model_type=\"scaling_predictor\"}",
            "legendFormat": "Scaling Predictor"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 13,
        "title": "Orchestration Decisions",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(orchestration_decisions_total{job=\"novacron\"}[5m]))",
            "legendFormat": "Decisions/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 14,
        "title": "Model Prediction Latency",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 32},
        "targets": [
          {
            "expr": "avg(ml_prediction_duration_seconds{job=\"novacron\"})",
            "legendFormat": "Avg Prediction Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 0.5}
              ]
            }
          }
        }
      },
      {
        "id": 15,
        "title": "Federation System",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 40},
        "collapsed": false
      },
      {
        "id": 16,
        "title": "Federation Cluster Health",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 41},
        "targets": [
          {
            "expr": "sum(federation_cluster_healthy{job=\"novacron\"}) by (cluster)",
            "legendFormat": "Healthy Clusters"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 17,
        "title": "Cross-Cluster Latency",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 41},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(federation_request_duration_seconds_bucket{job=\"novacron\"}[5m]))",
            "legendFormat": "P95 Federation Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        }
      },
      {
        "id": 18,
        "title": "Backup System",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 49},
        "collapsed": false
      },
      {
        "id": 19,
        "title": "Backup Success Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 50},
        "targets": [
          {
            "expr": "sum(rate(backup_operations_total{job=\"novacron\",status=\"success\"}[1h])) / sum(rate(backup_operations_total{job=\"novacron\"}[1h])) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 20,
        "title": "Backup Storage Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 50},
        "targets": [
          {
            "expr": "backup_storage_usage_bytes{job=\"novacron\"}",
            "legendFormat": "Storage Used"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "bytes"
          }
        }
      },
      {
        "id": 21,
        "title": "Backup Duration",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 50},
        "targets": [
          {
            "expr": "avg(backup_duration_seconds{job=\"novacron\"})",
            "legendFormat": "Avg Backup Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        }
      },
      {
        "id": 22,
        "title": "Infrastructure Metrics",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 58},
        "collapsed": false
      },
      {
        "id": 23,
        "title": "CPU Usage by Node",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 59},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\",job=\"node\"}[5m])) * 100)",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 24,
        "title": "Memory Usage by Node",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 59},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{job=\"node\"} / node_memory_MemTotal_bytes{job=\"node\"})) * 100",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 25,
        "title": "Disk Usage by Node",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 59},
        "targets": [
          {
            "expr": "100 - ((node_filesystem_avail_bytes{job=\"node\",fstype!=\"tmpfs\"} * 100) / node_filesystem_size_bytes{job=\"node\",fstype!=\"tmpfs\"})",
            "legendFormat": "{{instance}} - {{mountpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 26,
        "title": "Network I/O",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 67},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{job=\"node\",device!~\"lo|docker.*|veth.*\"}[5m]) * 8",
            "legendFormat": "{{instance}} - {{device}} - RX"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{job=\"node\",device!~\"lo|docker.*|veth.*\"}[5m]) * 8",
            "legendFormat": "{{instance}} - {{device}} - TX"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "bps"
          }
        }
      },
      {
        "id": 27,
        "title": "Disk I/O",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 67},
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total{job=\"node\"}[5m])",
            "legendFormat": "{{instance}} - {{device}} - Read"
          },
          {
            "expr": "rate(node_disk_written_bytes_total{job=\"node\"}[5m])",
            "legendFormat": "{{instance}} - {{device}} - Write"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "Bps"
          }
        }
      },
      {
        "id": 28,
        "title": "Alerting & SLA Status",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 75},
        "collapsed": false
      },
      {
        "id": 29,
        "title": "SLA Compliance Dashboard",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 76},
        "targets": [
          {
            "expr": "up{job=\"novacron\"}",
            "legendFormat": "Service Status",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "list",
              "filterable": false
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Status"},
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "mappings",
                  "value": [
                    {"options": {"0": {"text": "Down", "color": "red"}}, "type": "value"},
                    {"options": {"1": {"text": "Up", "color": "green"}}, "type": "value"}
                  ]
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "Value": "Status",
                "instance": "Node",
                "job": "Service"
              }
            }
          }
        ]
      },
      {
        "id": 30,
        "title": "Active Alerts",
        "type": "logs",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 84},
        "targets": [
          {
            "expr": "{job=\"alertmanager\"}",
            "legendFormat": ""
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      }
    ]
  }
}
# Playwright E2E Test Environment Configuration

# Base URL for tests
PLAYWRIGHT_BASE_URL=http://localhost:3000

# Test environment (local, staging, production)
TEST_ENV=local

# Authentication
TEST_USER=test@novacron.com
TEST_PASSWORD=testpassword123
PLAYWRIGHT_SKIP_AUTH=false

# Performance settings
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_NAVIGATION_TIMEOUT=10000
PLAYWRIGHT_ACTION_TIMEOUT=10000

# Browser settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=0

# Screenshots and videos
PLAYWRIGHT_SCREENSHOTS=on-failure
PLAYWRIGHT_VIDEOS=on-first-retry
PLAYWRIGHT_TRACES=retain-on-failure

# CI/CD settings
CI=false
GITHUB_ACTIONS=false

# Artifact management
ARCHIVE_ARTIFACTS=false
ARTIFACT_RETENTION_DAYS=7
UPDATE_SNAPSHOTS=false

# Parallel execution
PLAYWRIGHT_WORKERS=undefined

# Retry settings
PLAYWRIGHT_RETRIES=1

# Debugging
DEBUG=false
DEBUG_LOGS=false

# API mocking
MOCK_API=false
MOCK_DELAY=0

# Test data
SEED_DATABASE=false
CLEANUP_DATABASE=true

# Reporting
HTML_REPORT_OPEN=never
JSON_REPORT=true
JUNIT_REPORT=true

# Custom configuration
CUSTOM_CONFIG_PATH=

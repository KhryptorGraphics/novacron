# AI Operations Engine Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DB_URL=postgresql://postgres:postgres@localhost:11432/novacron
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100

# Machine Learning Configuration
ML_MODEL_STORAGE_PATH=/var/lib/novacron/ai-models
ML_MODEL_REGISTRY_URL=
ML_TRAIN_BATCH_SIZE=1000
ML_INFERENCE_BATCH_SIZE=100
ML_MODEL_UPDATE_INTERVAL=3600
ML_FEATURE_WINDOW_SIZE=24
ML_PREDICTION_HORIZON=30
ML_MIN_SAMPLES_FOR_TRAINING=1000
ML_FAILURE_PREDICTION_THRESHOLD=0.7
ML_ANOMALY_DETECTION_THRESHOLD=0.95
ML_DRIFT_DETECTION_THRESHOLD=0.1

# NovaCron API Integration
NOVACRON_API_URL=http://localhost:8090
NOVACRON_WS_URL=ws://localhost:8091
NOVACRON_API_TIMEOUT=30
NOVACRON_MAX_RETRIES=3
NOVACRON_RETRY_BACKOFF=1.0
NOVACRON_USERNAME=ai-engine
NOVACRON_PASSWORD=changeme

# Monitoring Configuration
MONITORING_METRICS_PORT=9100
MONITORING_METRICS_PATH=/metrics
MONITORING_LOG_LEVEL=INFO
MONITORING_LOG_FORMAT=json
MONITORING_LOG_FILE=/var/log/novacron-ai/ai-engine.log
MONITORING_HEALTH_CHECK_INTERVAL=60
MONITORING_HEALTH_CHECK_TIMEOUT=10

# Security Configuration
SECURITY_SECRET_KEY=changeme_in_production
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_ENABLE_CORS=true
SECURITY_ALLOWED_ORIGINS=http://localhost:8092,http://localhost:3001,http://localhost:3002

# API Server Configuration  
HOST=0.0.0.0
PORT=8093
WORKERS=1

# Development Tools (optional)
AI_GRAFANA_PASSWORD=admin
JUPYTER_TOKEN=novacron
AI_ENGINE_PASSWORD=changeme
AI_ENGINE_SECRET=changeme_in_production

# Production Overrides (uncomment for production)
# ENVIRONMENT=production  
# DEBUG=false
# WORKERS=4
# SECURITY_SECRET_KEY=your-super-secret-production-key
# NOVACRON_PASSWORD=secure-production-password
# AI_GRAFANA_PASSWORD=secure-grafana-password